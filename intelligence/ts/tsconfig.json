{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false, // Set to false to allow emitting types
    "declaration": true, // Generate declaration files (.d.ts)
    "declarationMap": true,
    "declarationDir": "./dist", // Output directory for .d.ts files
    "emitDeclarationOnly": true, // Only emit declaration files, no JS
    "outDir": "./dist", // Ensure output directory for types
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
